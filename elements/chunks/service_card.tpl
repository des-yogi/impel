<div class="services-block__col">
  <article class="service-item"
     style="background-image: url('[[+tv.service_img:phpthumbon=`w300&h=220&zc=C&f=webp`]]')"
     data-bg="[[+tv.service_img:phpthumbon=`w300&h=220&zc=C&f=jpeg`]]"
     data-bg-webp="[[+tv.service_img:phpthumbon=`w300&h=220&zc=C&f=webp`]]"
  >
    <!-- размер background-image ~(300x220) -->
    <div class="service-item__inner">
      <div class="service-item__text">
        <span class="service-item__icon">
          <img src="[[+tv.service_icon]]" alt="[[+pagetitle]]" height="48" loading="lazy" decoding="async">
          <!-- в спан вставить цвет круглого маркера -->
          <span style="background: [[+tv.service_color]]"></span>
        </span>
        <h3 class="service-item__title">[[+pagetitle]]</h3>
      </div>
      <a href="[[+uri]]" class="btn  btn--link">[[$langs? &uk=`Детальніше` &ru=`Подробнее` &en=`Read more`]]</a>
    </div>
  </article>
</div>
