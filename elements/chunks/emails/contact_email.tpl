<table style="border-collapse: collapse;">
  <tr>
    <td><b>Имя:</b></td>
    <td style="padding:8px 16px;">[[+name]]</td>
  </tr>
  [[+tel:notempty=`
  <tr>
    <td><b>Телефон:</b></td>
    <td style="padding:8px 16px;">[[+tel]]</td>
  </tr>
  `]]
  [[+email:notempty=`
  <tr>
    <td><b>E-mail:</b></td>
    <td style="padding:8px 16px;">[[+email]]</td>
  </tr>
  `]]
  [[+subject:notempty=`
  <tr>
    <td><b>Тема:</b></td>
    <td style="padding:8px 16px;">
      [[+subject]]
    </td>
  </tr>
  `]]
  [[+message:notempty=`
  <tr>
    <td><b>Сообщение:</b></td>
    <td style="padding:8px 16px;">[[+message]]</td>
  </tr>
  `]]
</table>

